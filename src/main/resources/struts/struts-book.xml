<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE struts PUBLIC  
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"  
    "http://struts.apache.org/dtds/struts-2.0.dtd">
    
 <struts>
   
      <package name="book" extends="root-package" namespace="/">
          <action name="query" class="com.turtledove.bookdrift.web.BookAction"
			method="query">
			<result name="success" type="json">
				<param name="root">result</param>
			</result>
			<interceptor-ref name="exceptionInterceptor"></interceptor-ref>
		</action>
		<action name="myBook" class="com.turtledove.bookdrift.web.BookAction" method="myBook">
		 <result name="success">/mybook.jsp</result>
		 <interceptor-ref name="exceptionInterceptor"></interceptor-ref>
		</action>
		<action name="getBooksUnderLabel" class="com.turtledove.bookdrift.web.BookAction" method="getBooksUnderLabel">
		  <result type="json" name="success">
		     <param name="root">result</param>
		  </result>
		  <interceptor-ref name="exceptionInterceptor"></interceptor-ref>
		</action>
      </package>
 </struts>